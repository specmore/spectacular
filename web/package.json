{
  "name": "spectacular",
  "version": "0.1.0",
  "description": "A spectacular tool for collaborating on interface specifications.",
  "scripts": {
    "start-deps": "docker-compose -f ../docker-compose.yml -f ../docker-compose.dev.yml --env-file ../.env up auth backend",
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "test": "jest",
    "test-ci": "jest --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint src/ --ext .js,.ts,.tsx",
    "generate-fetcher": "restful-react import --file ../backend/specs/backend-api.yaml --output src/backend-api-client.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/specmore/spectacular.git"
  },
  "author": "Patrick Burls",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/specmore/spectacular/issues"
  },
  "homepage": "https://github.com/specmore/spectacular#readme",
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@types/jest": "^24.9.1",
    "@types/react": "^16.14.32",
    "@types/react-dom": "^16.9.16",
    "@types/react-router-dom": "^5.3.3",
    "@types/swagger-ui-react": "^3.35.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.2.5",
    "css-loader": "^3.6.0",
    "dotenv": "^8.6.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^2.5.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-junit": "^11.1.0",
    "less": "^2.7.3",
    "less-loader": "^6.2.0",
    "mini-css-extract-plugin": "^0.8.2",
    "style-loader": "^1.3.0",
    "typescript": "^3.9.10",
    "url-loader": "^3.0.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.3"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "nord": "^0.2.1",
    "query-string": "^7.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-moment": "^1.1.2",
    "react-router": "^5.3.3",
    "react-router-dom": "^5.3.3",
    "restful-react": "^15.9.4",
    "semantic-ui-less": "^2.4.1",
    "semantic-ui-react": "^2.1.3",
    "swagger-ui-react": "^4.14.0",
    "use-query-params": "^1.2.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "test-utils.js",
      "test-data-generator/"
    ]
  },
  "jest-junit": {
    "suiteName": "web jest tests",
    "outputDirectory": "out/results/"
  }
}
